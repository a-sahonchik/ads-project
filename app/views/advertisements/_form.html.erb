<%= simple_form_for @advertisement do |f| %>
  <%= f.input :ad_title, label: "Title",placeholder: "Input string" %>
  <%= f.input :ad_text, label: "Text",placeholder: "Input your text here" %>
  <%= f.input :category_id, collection: Category.order(:name), prompt: "Choose category" %>
  <%= f.button :submit %>
<% end %>
