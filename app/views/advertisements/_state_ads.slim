- @advertisements.where(state: state).each do |advertisement|
  article.advertisement
    - if advertisement.pictures.any?
      = image_tag advertisement.pictures.first.url(:thumb), class: 'ads-picture col-12 col-md-3'
    - else
      = image_tag "/missing-image.png", class: 'ads-picture col-12 col-md-3'
    .ads-body.col-12.col-md-9
      section.advertisement-head
        h2
          = link_to advertisement.ad_title, advertisement_path(advertisement)
        small
          time
            = advertisement.created_at.to_date.strftime("%d %B, %Y")
      section.advertisement-summary
        = advertisement.ad_text
